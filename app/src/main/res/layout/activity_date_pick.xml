<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_date_pick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:background="@drawable/home_background"
    tools:context="com.yapp.lazitripper.views.DatePickActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="60dp"
        android:text="Step 1/2"
        android:textAlignment="inherit"
        android:textColor="#000000"
        android:textSize="11sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="5dp"
        android:text="며칠동안\n여행을 떠나세요?"
        android:textAlignment="inherit"
        android:textColor="#000000"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/datePick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:paddingRight="40dp"
        android:paddingTop="5dp"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:paddingBottom="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext_total"
        android:digits="0123456789"
        android:maxLength="2"
        android:textSize="18sp"
        android:hint="여행 일 수를 입력하세요"/>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/bt_corner"
        android:layout_gravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="185dp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:text="다음  >" />

</LinearLayout>
