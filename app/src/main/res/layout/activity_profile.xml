<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_profile_back"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/mypage_margin_size"
        android:layout_marginTop="16dp"
        android:src="@drawable/arrow" />
    <ImageView
        android:id="@+id/iv_profile_logout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/mypage_margin_size"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon_logout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp">

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView

                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_profile_photo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pickatu"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp" />
            <!--android:src="@drawable/profile"-->


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="56dp"
                android:text="홍길동"
                android:textColor="#363636"
                android:textSize="15sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/my_travel_key_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginLeft="@dimen/mypage_margin_size"
            android:layout_marginRight="@dimen/mypage_margin_size"
            android:layout_marginTop="26dp">

            <TextView
                android:id="@+id/my_travel_key_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심 키워드"
                android:textColor="@android:color/black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/my_travel_key_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="수정"
                android:textColor="#c6c6c6"
                android:textSize="12sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tag_layout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_travel_key_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/mypage_margin_size"
            android:layout_marginRight="@dimen/mypage_margin_size"
            android:layout_marginTop="13dp">

            <me.gujun.android.taggroup.TagGroup
                android:id="@+id/tag_group"
                style="@style/TagGroup.Beauty_Gray"
                app:atg_horizontalPadding="11dp"
                app:atg_horizontalSpacing="12dp"
                app:atg_textSize="14sp"
                app:atg_verticalPadding="5dp"
                app:atg_verticalSpacing="6dp" />

        </RelativeLayout>

        <View
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tag_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#eeeeee" />

        <RelativeLayout
            android:id="@+id/my_route_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator2"
            android:layout_marginLeft="@dimen/mypage_margin_size"
            android:layout_marginRight="@dimen/mypage_margin_size"
            android:layout_marginTop="34dp">


            <TextView
                android:id="@+id/my_route_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 여행 일지"
                android:textColor="#101010"
                android:textSize="12sp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_profile_travel_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_route_title_layout"
            android:layout_marginTop="15dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />



    </RelativeLayout>


</RelativeLayout>

